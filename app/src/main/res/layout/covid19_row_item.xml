<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/cv19_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="3dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/cv19_describe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cv19_icon"
            android:layout_marginStart="8dp"
            android:text="Description"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cv19_stats1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv19_describe1"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/cv19_icon"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            android:text="Number"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cv19_describe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv19_stats1"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/cv19_icon"
            android:textColor="@android:color/black"
            android:text="Description"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cv19_stats2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv19_describe2"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/cv19_icon"
            android:textColor="@android:color/black"
            android:text="Number"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>