<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Checklist"
    android:background="@drawable/quiz_background"
    android:id="@+id/checklist_layout">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/checklist_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light" />

    <TextView
        android:id="@+id/checklist_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checklist_toolbar"
        android:layout_centerInParent="true"
        android:layout_marginVertical="20dp"
        android:text="@string/items_to_bring"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/checklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checklist_TV"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:choiceMode="multipleChoice"/>

</RelativeLayout>